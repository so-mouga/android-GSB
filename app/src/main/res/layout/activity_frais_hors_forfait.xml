<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frais_hors_forfait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kevinmouga.gsb_n2f.Frais_hors_forfait_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollFhf"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/imageView3"
                android:layout_width="116dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/logoo" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="62dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@mipmap/trait" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:fontFamily="arial"
                    android:gravity="center"
                    android:text="Frais Hors forfait"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="58dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    app:srcCompat="@mipmap/trait" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="LibellÃ© :"
                        android:textAlignment="textStart" />

                    <EditText
                        android:background="@drawable/champ_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/libelleFHF" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Montant :"
                        android:textAlignment="viewStart" />

                    <EditText
                        android:background="@drawable/champ_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text=""
                        android:ems="10"
                        android:id="@+id/montantFHF" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Date :"
                        android:textAlignment="viewStart" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="30dp"
                        android:layout_height="match_parent">


                        <EditText
                            android:background="@drawable/champ_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:ems="10"
                            android:id="@+id/dateFHF"
                            android:layout_weight="0.87" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@mipmap/calend"
                            android:id="@+id/calendarButton"
                            android:layout_weight="0.87" />


                    </LinearLayout>


                </TableRow>


                <TableRow
                    android:layout_marginTop="15dp"
                    android:id="@+id/justification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="#333"
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tableLayout"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="20dp"
                        android:text="Justificatif :"/>

                        <Button
                            android:text="photo"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:id="@+id/photo"
                            android:layout_weight="1" />

                        <Button
                            android:background="@drawable/button_blue"
                            android:textColor="#ffffff"
                            android:text="ajouter"
                            android:layout_width="10dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="30dp"
                            android:layout_marginStart="20dp"
                            android:id="@+id/ajouterFhf"
                            android:layout_weight="1" />


                </TableRow>
            </TableLayout>
            <TableRow

                android:layout_below="@+id/middleLayout"
                android:visibility="visible"
                android:id="@+id/layouTitre"
                android:layout_width="match_parent"
                android:layout_height="35dp" >

                <TextView
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Date facture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:textSize="12sp" />

                <TextView
                    android:padding="10dp"
                    android:text="Presta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginStart="40dp"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:text="Montant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@android:drawable/ic_menu_edit"
                    android:id="@+id/imageView" />

            </TableRow>



            <TableLayout
                android:layout_marginTop="10dp"
                android:id="@+id/layoutFHF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
